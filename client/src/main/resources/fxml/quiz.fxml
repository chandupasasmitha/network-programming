<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!-- 1. Outer StackPane (centers everything) -->
<StackPane xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="client.QuizController"
           styleClass="bg">

    <!-- 2. Inner VBox – the real quiz card -->
    <VBox alignment="CENTER"
          spacing="28"
          styleClass="quiz-card"
          maxWidth="800"
          prefWidth="800">

        <Label fx:id="questionNumberLabel"
               text="Question 1 of 10"
               styleClass="title-label"/>

        <Label fx:id="questionLabel"
               text="Question Text Here"
               wrapText="true"
               styleClass="question-label"/>

        <!-- Options – fixed width, centered -->
        <VBox spacing="14"
              prefWidth="560"
              maxWidth="560"
              alignment="CENTER_LEFT">
            <RadioButton fx:id="option1" styleClass="option-button" text="Option A"/>
            <RadioButton fx:id="option2" styleClass="option-button" text="Option B"/>
            <RadioButton fx:id="option3" styleClass="option-button" text="Option C"/>
            <RadioButton fx:id="option4" styleClass="option-button" text="Option D"/>
        </VBox>

        <!-- Timer + Submit -->
        <HBox spacing="22" alignment="CENTER">
            <Label fx:id="timerLabel"
                   text="Time: 15s"
                   styleClass="timer-label"/>
            <ProgressBar fx:id="timerProgress"
                         prefWidth="220"/>
            <Button fx:id="submitButton"
                    text="Submit"
                    styleClass="button"/>
        </HBox>
    </VBox>
</StackPane>