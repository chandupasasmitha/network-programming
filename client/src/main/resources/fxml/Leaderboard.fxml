<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.LeaderboardController">
   <top>
      <VBox alignment="CENTER" spacing="10">
         <children>
            <Label fx:id="titleLabel" style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #ffd700;" text="ðŸ† LEADERBOARD ðŸ†" />
            <Label fx:id="gameStatusLabel" style="-fx-font-size: 16px; -fx-text-fill: #00ff00;" text="Live Rankings" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </top>
   <center>
      <VBox alignment="CENTER" spacing="10">
         <children>
            <TableView fx:id="leaderboardTable" prefHeight="400.0" prefWidth="650.0" style="-fx-background-color: #0f3460;">
               <columns>
                  <TableColumn fx:id="medalCol" prefWidth="80.0" style="-fx-alignment: CENTER; -fx-font-size: 20px;" text="Rank" />
                  <TableColumn fx:id="nameCol" prefWidth="200.0" style="-fx-alignment: CENTER-LEFT; -fx-font-size: 16px; -fx-font-weight: bold;" text="Player Name" />
                  <TableColumn fx:id="scoreCol" prefWidth="120.0" style="-fx-alignment: CENTER; -fx-font-size: 16px; -fx-font-weight: bold;" text="Score" />
                  <TableColumn fx:id="streakCol" prefWidth="120.0" style="-fx-alignment: CENTER; -fx-font-size: 16px;" text="Streak" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER" spacing="20">
         <children>
            <Button fx:id="refreshBtn" onAction="#onRefreshClicked" style="-fx-background-color: #00ff00; -fx-text-fill: black; -fx-font-weight: bold;" text="ðŸ”„ Refresh" />
            <Button fx:id="allTimeBtn" onAction="#onAllTimeClicked" style="-fx-background-color: #4169e1; -fx-text-fill: white; -fx-font-weight: bold;" text="ðŸ“Š All-Time Stats" />
            <Button fx:id="backBtn" onAction="#onBackClicked" style="-fx-background-color: #ff4444; -fx-text-fill: white; -fx-font-weight: bold;" text="â† Back to Lobby" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </HBox>
   </bottom>
   <style>-fx-background-color: linear-gradient(to bottom, #1a1a2e, #16213e);</style>
</BorderPane>
