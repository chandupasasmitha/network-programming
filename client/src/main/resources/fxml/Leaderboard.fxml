<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.LeaderboardController" spacing="12" alignment="TOP_CENTER">
    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
    <Label text="Leaderboard" style="-fx-font-size:18px; -fx-font-weight:bold;" />
    <TableView fx:id="table" prefWidth="600" prefHeight="400">
        <columns>
            <TableColumn fx:id="nameCol" text="Player" prefWidth="300" />
            <TableColumn fx:id="scoreCol" text="Score" prefWidth="200" />
        </columns>
    </TableView>
</VBox>
